---
// src/layouts/Layout.astro
import '../styles/global.css'; // <--- ¡ESTA ES LA LÍNEA MÁGICA QUE FALTABA!

interface Props {
	title: string;
	description?: string;
}

const { 
    title, 
    description = "Transformamos procesos complejos en software eficiente. Consultoría de software en Guadalajara." 
} = Astro.props;
---

<!doctype html>

<!doctype html>
<html lang="es" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-lanma-light text-lanma-dark font-sans antialiased">
        <slot />
	</body>
</html>