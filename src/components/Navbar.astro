---
// src/components/Navbar.astro
const navLinks = [
  { name: 'Inicio', href: '/' },
  { name: 'Resultados', href: '#casos' },
  { name: 'Metodología', href: '#servicios' },
];
---

<header class="fixed w-full top-0 z-50 bg-white/90 backdrop-blur-md border-b border-gray-100 transition-all duration-300 shadow-sm" id="navbar">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8" aria-label="Top">
    <div class="w-full py-4 flex items-center justify-between border-b border-indigo-500 lg:border-none">
      
      <div class="flex items-center">
        <a href="/" class="flex items-center gap-2 group">
          <span class="text-3xl text-lanma-accent group-hover:rotate-180 transition-transform duration-700">⚛</span>
          <span class="text-2xl font-bold text-lanma-dark tracking-tight">Lanma Tech</span>
        </a>
      </div>

      <div class="hidden ml-10 space-x-8 lg:flex items-center">
        {navLinks.map((link) => (
          <a href={link.href} class="text-base font-medium text-gray-600 hover:text-lanma-primary transition-colors">
            {link.name}
          </a>
        ))}
        <a href="#contacto" class="inline-block bg-lanma-primary py-2 px-6 border border-transparent rounded-full text-base font-medium text-white hover:bg-blue-700 transition-all shadow-md hover:shadow-lg transform hover:-translate-y-0.5">
          Diagnóstico Gratis
        </a>
      </div>

      <div class="lg:hidden flex items-center">
        <button id="mobile-menu-btn" type="button" class="bg-white rounded-md p-2 inline-flex items-center justify-center text-gray-400 hover:text-gray-500 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-lanma-primary">
          <span class="sr-only">Abrir menú</span>
          <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
    
    <div id="mobile-menu" class="hidden lg:hidden bg-white border-t border-gray-100 absolute w-full left-0 shadow-xl">
      <div class="pt-2 pb-4 space-y-1 px-4">
        {navLinks.map((link) => (
          <a href={link.href} class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-lanma-primary hover:bg-gray-50">
            {link.name}
          </a>
        ))}
        <a href="#contacto" class="block w-full text-center mt-4 bg-lanma-primary py-3 px-4 rounded-md text-base font-medium text-white hover:bg-blue-700">
            Contactar Ahora
        </a>
      </div>
    </div>
  </nav>
</header>

<script>
  // Lógica simple para abrir/cerrar menú móvil
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');

  if (btn && menu) {
    btn.addEventListener('click', () => {
      menu.classList.toggle('hidden');
    });
    
    // Cerrar menú al hacer click en un enlace
    menu.querySelectorAll('a').forEach(link => {
        link.addEventListener('click', () => {
            menu.classList.add('hidden');
        });
    });
  }
</script>